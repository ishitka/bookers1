<div class="edit">
  <h2>Editing Book</h2>
  <%= form_with model: @book do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <div>
      <%= f.submit 'Update Book' %>
    </div>
    <div class="edit-item">
      <%= link_to "Show", book_path(@book.id) %>
      <p>|</p>
      <%= link_to "Back", books_path %>
    </div>
  <% end %>


  <% if flash.now[:error] && flash.now[:error].any? %>
    <%= flash.now[:error].count %> errors prohibited this book from being saned:
      <ul>
        <% flash.now[:error].each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
  <% end %>
</div>