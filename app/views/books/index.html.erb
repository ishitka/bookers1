<h2 class="head">Books</h2>
<% @books = Book.all %>
<table class="index">
  <tr>
    <th>Title</th>
    <th class="index-body">Body</th>
    <th class="index-item"></th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td class="index-body"><%= book.title %></td>
    <td><%= book.body %></td>
    <td class="index-item">
      <%= link_to "Show", book_path(book.id) %>
      <%= link_to "Edit", edit_book_path(book.id) %>
      <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
    </td>
  </tr>
  <% end %>
</table>  
  
<div class="new-box">
<h2>New Book</h2>
<% if flash.now[:error] && flash.now[:error].any? %>
<%= flash.now[:error].count %> errors prohibited this book from being saned:
<ul>
<% flash.now[:error].each do |message| %>
<li><%= message %></li>
<% end %>
</ul>
<% end %>

<%= form_with model:@book do |f| %>
<p class="new-item">Title</p>
<%= f.text_field :title %>
<p class="new-item">Body</p>
<%= f.text_area :body %>
<div class="new-item"><%= f.submit 'Create Book' %></div>
<% end %>
</div>

